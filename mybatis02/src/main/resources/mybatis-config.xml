<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <!--  引入外部配置文件：优先级更大  -->
    <properties resource="db.properties">
    <!--    添加额外配置信息    -->
        <property name="url1" value="url=jdbc:mysql://localhost:3306/test"/>
    </properties>
    <!--  设置  -->
    <settings>
        <!--   使用标准日志输出     -->
        <!--        <setting name="logImpl" value="STDOUT_LOGGING"/>-->
        <!--    log4j日志输出    -->
        <setting name="logImpl" value="LOG4J"/>
        <setting name="cacheEnabled" value="true"/>
        <setting name="lazyLoadingEnabled" value="true"/>
    </settings>
    <typeAliases>
        <!--   指定别名     -->
        <typeAlias type="com.hu.pojo.User02" alias="usr"/>
        <!--  给路径下的类(javabean)指定类名为别名 ,为类名小写 -->
        <package name="com.hu.pojo"/>
    </typeAliases>

    <!--核心配置文件-->
    <environments default="development">
        <environment id="development">
            <!--      事务类型      -->
            <transactionManager type="JDBC"/>
            <!--    数据源类型        -->
            <dataSource type="POOLED">
                <!--     ${property}调用外部配置信息property           -->
                <property name="driver" value="${driver}"/>
                <property name="url" value="${url}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
        <!--   配置多套环境     -->
        <environment id="test">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.mysql.cj.jdbc.Driver"/>
                <property name="url" value="${url1}"/>
                <property name="username" value="${username}"/>
                <property name="password" value="${password}"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
    <!--    添加映射器 方法1，资源路径   -->
    <!--        <mapper resource="com/hu/mapper/UserMapper02.xml"/>-->
    <!--    方法2，映射器，接口路径    -->
            <mapper class="com.hu.mapper.UserMapper02"/>
    <!--    方法3，扫描包中配置文件     -->
    <!--        <package name="com.hu.mapper"/>-->
    </mappers>
</configuration>